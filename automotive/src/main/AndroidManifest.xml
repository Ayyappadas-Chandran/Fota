<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ultraviolette.fotaservice">

    <uses-feature
        android:name="android.hardware.type.automotive"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />


    <permission
        android:name="com.ultraviolette.permission.BIND_FOTA_SERVICE"
        android:protectionLevel="signature" />
    <queries>
        <package android:name="com.example.database"/>
    </queries>
    <queries>
        <package android:name="com.example.mqttservice" />  <!-- MqttService package -->
    </queries>
    <application
        android:allowBackup="true"
        android:appCategory="audio"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FotaService" >
        <service
            android:name=".FotaService"
            android:exported="true"
            android:foregroundServiceType="dataSync|specialUse"
            android:permission="com.ultraviolette.permission.BIND_FOTA_SERVICE">
        <intent-filter>
            <action android:name="com.ultraviolette.fota.CLOUD_BINDER"/>
            <action android:name="com.ultraviolette.fota.HMI_BINDER"/>
            <action android:name="com.ultraviolette.fotaservice.action.BIND_FOTA" />
        </intent-filter>
        </service>
        <receiver android:name=".FotaReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
